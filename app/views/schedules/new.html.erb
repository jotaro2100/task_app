<div class="form">
  <h2>スケジュール新規登録</h2>
  <%= render "shared/error", obj: @schedule %>
  <%= form_with model: @schedule do |f| %>
    <table>
      <tbody>
        <tr>
          <th><%= f.label :title, "タイトル" %></th>
          <td><%= f.text_field :title %></td>
        </tr>
        <tr>
          <th><%= f.label :start_date, "開始日" %></th>
          <td><%= f.date_field :start_date, min: Date.current %></td>
        </tr>
        <tr>
          <th><%= f.label :end_date, "終了日" %></th>
          <td><%= f.date_field :end_date, min: Date.current %></td>
        </tr>
        <tr>
          <th><%= f.label :all_day, "終日" %></th>
          <td><%= f.check_box :all_day %>終日の場合はチェックを入れます</td>
        </tr>
        <tr>
          <th><%= f.label :memo, "メモ" %></th>
          <td><%= f.text_area :memo, class: "memo"%></td>
        </tr>
      </tbody>
    </table>
    <p><%= f.submit "登録完了する" %></p>
    <p><%= link_to "スケジュール一覧に戻る", schedules_path %></p>
  <% end %>
</div>
